
@{
    ViewBag.Title = "Newstudent";
}
<style>
    body {
        background-image: url('/AppFile/details.jpg');
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


<div class="container">
    <h2>New  Student</h2>
    <div class="row">
        <div class="col-md-6">
            <form id="Newstudent" method="post" enctype="multipart/form-data" onsubmit="return AjaxPost(this)">
                <label>Name</label><br />
                <input id="name" name="name" class="form-control" placeholder="student name" />
                <label>Year</label><br />
                <input id="year" name="year" class="form-control" placeholder="student studying in year" />
                <label>stream</label><br />
                <input id="stream" name="stream" class="form-control" placeholder="branch" />
                <label>Title</label><br />
                <input id="imageupload" name="imageupload" class="form-control" type="file" />
                <button class="btn btn-danger">
                   Add
                </button>

            </form>
        </div>
    </div>
</div>
<script>
    function AjaxPost(formData) {
        var ajaxConfig = {
            type: "Post",
            url: "/Student/SaveData",
            data: new FormData(formData),
            success: function (result) {
                alert(result);
                window.location.href="/Student/Newstudent"
            }
        }
        if ($(formData).attr('enctype') == "multipart/form-data") {
            ajaxConfig["contentType"] = false;
            ajaxConfig["processData"] = false;

        }
        $.ajax(ajaxConfig);
        return false;
    }
</script>

