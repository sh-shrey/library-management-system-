@model IEnumerable<final_assignment.Models.book>

@{
    ViewBag.Title = "Index";
}

    <style>
        body {
            background-image: url('/AppFile/issue.jpg');
            height: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr {
            background-color: #f2f2f2;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
    
        <p style=" font-size:large;">
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Create New", "Create")
            }
        </p>
<center>
        <p>
            @using (Html.BeginForm("Index", "Books", FormMethod.Get))
            {
                <b> Search </b> @Html.RadioButton("searchby", "book_name")<b>  Book Name  </b>
                @Html.RadioButton("searchby", "")<b> edition </b>
                @Html.TextBox("search")<input type="submit" value="search" />
            }
        </p>
    </center>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.book_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.about)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.edition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.author.author_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category.category_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publisher.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.book_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.about)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pages)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.edition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.author.author_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.category_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publisher.name)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })

            }
            @Html.ActionLink("Details", "Details", new { id = item.Id })

            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
